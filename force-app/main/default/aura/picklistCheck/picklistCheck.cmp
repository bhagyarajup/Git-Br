<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
  <aura:attribute name="options" type="List" access="PRIVATE"/>
    <aura:attribute name="selectedValue" type="String" access="PRIVATE"/>
  <aura:handler name="init" value="{!this}" action="{!c.init}" />
    
   <lightning:select name="select" label="Select a color:" aura:id="colorId" onchange="{! c.onChange }">
        <aura:iteration items="{!v.options}" var="option">
            <option text="{!option.label}" value="{!option.id}" selected="{!option.selected}"/>
        </aura:iteration>
    </lightning:select>
    
    <lightning:select aura:id="select" name="select" label="Select a pie" onchange="{! c.onChange }">
        <option value="">choose one...</option>
        <option value="apple1">apple</option>
        <option value="pumpkin2">pumpkin</option>
        <option value="cherry3">cherry</option>
        <option value="blueberry4">blueberry</option>
        <option value="pickle5">pickle</option>
    </lightning:select>
</aura:component>